<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1000dp" />
            <stroke android:width="1dip" android:color="#1C8BF4" />
            <gradient android:angle="-90" android:startColor="#1C8BF4" android:endColor="#1C8BF4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1000dp" />
            <stroke android:width="1dip" android:color="#5773D4" />
            <solid android:color="#5773D4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="1000dp" />
            <stroke android:width="1dip" android:color="#5773D4" />
            <gradient android:angle="-90" android:startColor="#5773D4" android:endColor="#5773D4" />
        </shape>
    </item>
</selector>