<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191C25"
    tools:context="com.sekhontech.singering.Activities.First">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </include>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/txt_username_profile"
    android:layout_below="@+id/tool"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="3">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:layout_gravity="center"
        android:src="#A5A8B1"
        app:civ_border_width="2dp"
        app:civ_border_color="#4D5059" />

</LinearLayout>

    <TextView
        android:id="@+id/txt_username_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_city_country"
        android:text="Username"
        android:layout_marginTop="5sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#A5A8B1"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/txt_city_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:text="city,country"
        android:layout_above="@+id/linear"
        android:textColor="#A5A8B1"
        android:textAlignment="center"/>


    <LinearLayout
        android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:weightSum="1.5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:gravity="center">

            <Button
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginTop="6sp"
                android:paddingTop="18sp"
                android:background="@drawable/button_round_corner"
                android:drawableTop="@drawable/message_icon"
                android:textSize="11sp"
                android:textColor="#A5A8B1"
                android:id="@+id/btn_message"
                 />

            <Button
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:background="@drawable/button_round_corner"
                android:drawableTop="@drawable/ic_explore"
                android:textColor="#A5A8B1"
                android:paddingTop="18sp"
                android:layout_marginTop="30sp"
                android:id="@+id/btn_explore"
                android:textSize="11sp" />

        </LinearLayout>

   <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="0.5"
    android:gravity="center">

    <Button
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:background="@drawable/button_round_corner"
        android:drawableTop="@drawable/playlist_icon"
        android:paddingTop="13sp"
        android:paddingLeft="4sp"
        android:textColor="#A5A8B1"
        android:textSize="11sp"
        android:id="@+id/btn_playlist"
        />
    <Button
        android:id="@+id/btn_friends"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:layout_margin="28sp"
        android:paddingTop="12sp"
        android:textColor="#A5A8B1"
        android:background="@drawable/button_round_corner"
        android:drawableTop="@drawable/friends_icon"
        android:textSize="11sp"
       />
    <Button
        android:id="@+id/btn_stream"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:textColor="#A5A8B1"
        android:paddingTop="23sp"
        android:paddingRight="4sp"
        android:background="@drawable/button_round_corner"
        android:drawableTop="@drawable/stream_icon"
        android:textSize="11sp"

        />
</LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:gravity="center">

            <Button
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:background="@drawable/button_round_corner"
                android:drawableTop="@drawable/notification_icon"
                android:paddingTop="18sp"
                android:layout_marginTop="6sp"
                android:textColor="#A5A8B1"
                android:id="@+id/btn_notification"
                android:textSize="10sp" />



            <Button
                android:layout_width="80sp"
                android:layout_height="80sp"
                android:layout_marginTop="30sp"
                android:background="@drawable/button_round_corner"
                android:drawableTop="@drawable/settings_icon"
                android:textSize="11sp"
                android:paddingTop="22sp"
                android:textColor="#A5A8B1"
                android:id="@+id/btn_settings"
             />


        </LinearLayout>


</LinearLayout>

</RelativeLayout>
</RelativeLayout>
