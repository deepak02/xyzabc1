<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:id="@+id/scrollone"
    android:background="#eee9e9"
    android:fillViewport="true"
    android:scrollbars="none">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eee9e9"
    android:layout_marginTop="15dp"
    android:layout_gravity="center"
    tools:context="com.sekhontech.singering.Activities.Register">

<LinearLayout
    android:id="@+id/layout_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="12sp"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_circle_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/camera_icontwo"
        app:civ_border_width="2dp"
        app:civ_border_color="#d4cccc"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="5sp"
        android:textSize="22sp"
        android:textColor="#4D5059" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register with your e-mail address."
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#4D5059"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose a username and password,and dive in! "
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#4D5059"/>

</LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/layout_top"
    android:orientation="vertical"
    android:layout_marginTop="10sp">

<EditText
    android:id="@+id/edttxt_username"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8sp"
    android:paddingBottom="8sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:inputType="text"
    android:paddingLeft="8sp"
    android:drawablePadding="7sp"
    android:hint="Username"
    android:drawableLeft="@drawable/ic_login"
    android:background="@drawable/layout_bg"
    />

    <EditText
        android:id="@+id/edttxt_emailid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:inputType="textEmailAddress"
        android:paddingRight="10sp"
        android:paddingLeft="10sp"
        android:drawablePadding="10sp"
        android:hint="Email Address"
        android:drawableLeft="@drawable/ic_email"
        android:background="@drawable/layout_bg"/>

    <EditText
        android:id="@+id/edttxt_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:inputType="textWebPassword"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:drawablePadding="10sp"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_key"
        android:background="@drawable/layout_bg"/>

    <EditText
        android:id="@+id/edttxt_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20sp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:layout_marginRight="20sp"
        android:paddingRight="10sp"
        android:layout_marginTop="10sp"
        android:paddingLeft="10sp"
        android:drawablePadding="10sp"
        android:inputType="textWebPassword"
        android:hint="Confirm Password"
        android:drawableLeft="@drawable/ic_key"
        android:background="@drawable/layout_bg"/>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Register"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        android:textColor="#A5A8B1"
        android:background="@drawable/button_round_corner"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10sp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="#4D5059"/>

    <TextView
        android:id="@+id/tv_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textColor="#4D5059"
        android:paddingLeft="15sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingRight="15sp"
        android:textStyle="bold"
        android:background="@drawable/layout_bg"
        android:textSize="16sp"/>

</LinearLayout>


</LinearLayout>
</RelativeLayout>
</ScrollView>