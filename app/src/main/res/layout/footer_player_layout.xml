<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="3"
    android:background="@color/black_little_dark_trans"
    android:orientation="horizontal">

<ImageView
    android:layout_margin="3dp"
    android:id="@+id/Iv_track_image"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_width="60dp"
    android:src="@drawable/mic_icon"
    android:layout_height="match_parent"/>

<LinearLayout
    android:id="@+id/linear"
    android:layout_centerHorizontal="true"
    android:layout_toRightOf="@+id/Iv_track_image"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_marginLeft="8dp"
    android:orientation="vertical"
    android:layout_toLeftOf="@+id/Iv_play_pause"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/Tv_footer_track_name"
        android:text="track_name"
        android:textColor="#fff"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/Tv_footer_tag_name"
        android:text="track_tag"
        android:textColor="#fff"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    </LinearLayout>


    <ImageView
        android:id="@+id/Iv_play_pause"
        android:layout_width="50dp"
        android:src="@drawable/ic_pause_noti"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent" />

</RelativeLayout>