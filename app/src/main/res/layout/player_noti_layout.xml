<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_notif"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#000"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/iv_station_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:layout_weight="0.25" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.74"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:layout_marginLeft="3dp"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:lines="1"
            android:layout_marginBottom="3dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:text="This is Radio station"
            android:textColor="#fff"
            android:textSize="16sp">

            <requestFocus />
        </TextView>

        <TextView
            android:id="@+id/tv_radiostationname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_toLeftOf="@+id/iv_playpause"
            android:gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:lines="1"
            android:text="This is Radio station"
            android:textColor="#fff"
            android:textSize="14sp" />


        <!--<ImageView-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:src="@drawable/ic_close_white"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:id="@+id/iv_close"/>-->


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_playpause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_play_noti" />
</LinearLayout>
