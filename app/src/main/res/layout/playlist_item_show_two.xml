<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_notif"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#000"
    android:orientation="horizontal"
    android:weightSum="1">

    <ImageView
        android:id="@+id/iv_playlist_img"
        android:layout_width="0dp"
        android:src="@drawable/playlist_icon"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:focusableInTouchMode="true"
        android:layout_weight="0.25" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.74"
        android:gravity="center"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/txtview_playlistname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:focusable="true"
            android:layout_marginLeft="3dp"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:lines="1"
            android:layout_marginBottom="3dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:text="This is Radio station"
            android:textColor="#fff"
            android:textSize="16sp">
        </TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5sp"
            android:orientation="horizontal"
            android:focusableInTouchMode="true"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:src="@drawable/tracks_small"/>

            <TextView
                android:id="@+id/tv_track_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:layout_below="@+id/tv_title"
                android:layout_toLeftOf="@+id/iv_playpause"
                android:gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:lines="1"
                android:text=" Tracks"
                android:textColor="#fff"
                android:textSize="14sp" />




        </LinearLayout>



        <!--<ImageView-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:layout_marginRight="8dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:src="@drawable/ic_close_white"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:id="@+id/iv_close"/>-->


    </LinearLayout>


    <ImageView
        android:id="@+id/IV_delete_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/delete_btn_n"/>


</LinearLayout>
